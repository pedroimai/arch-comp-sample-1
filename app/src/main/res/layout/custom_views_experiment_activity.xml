<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CustomViewsExperimentActivity">

    <com.pedroimai.archcomp.ui.widgets.CounterView
        android:id="@+id/counter_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/counter_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.pedroimai.archcomp.ui.widgets.CounterView>

    <com.pedroimai.archcomp.ui.widgets.CounterView
        android:id="@+id/counter_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/counter_3"
        app:layout_constraintLeft_toLeftOf="@+id/counter_1"
        app:layout_constraintRight_toRightOf="@+id/counter_1"
        app:layout_constraintTop_toBottomOf="@+id/counter_1">

    </com.pedroimai.archcomp.ui.widgets.CounterView>

    <com.pedroimai.archcomp.ui.widgets.CounterView
        android:id="@+id/counter_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/counter_2"
        app:layout_constraintRight_toRightOf="@+id/counter_2"
        app:layout_constraintTop_toBottomOf="@+id/counter_2">

    </com.pedroimai.archcomp.ui.widgets.CounterView>

</androidx.constraintlayout.widget.ConstraintLayout>